@model AddBusModel;



<!-- Modal -->

<div class="modal-header">
    <h5 class="modal-title">Ekle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>


<div class="modal-body">
    <form id="frmAddNewBus" asp-action="AddNewBus" method="post" data-ajax="true" data-ajax-method="post" data-ajax-update="#modalAddContent">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

        <div class="form-group mb-1">
            <label asp-for="BusPlate" class="form-label">Plaka</label>
            <input asp-for="BusPlate" type="text" style="text-transform:uppercase" class="form-control" placeholder="Plaka" />
            <span asp-validation-for="BusPlate" class="text-danger small"></span>
        </div>
        <div class="form-group mb-1">
            <label asp-for="BusType" class="form-label">Tipi</label>
            <input asp-for="BusType" type="text" class="form-control" placeholder="Tipi" />
            <span asp-validation-for="BusType" class="text-danger small"></span>
        </div>
        <div class="form-group mb-1">
            <label asp-for="BusBrand" class="form-label">Marka</label>
            <input asp-for="BusBrand" type="text" class="form-control" placeholder="Marka" />
            <span asp-validation-for="BusBrand" class="text-danger small"></span>
        </div>
        <div class="form-group mb-1">
            <label asp-for="BusModelName" class="form-label">Model</label>
            <input asp-for="BusModelName" type="text" class="form-control" placeholder="Model" />
            <span asp-validation-for="BusModelName" class="text-danger small"></span>
        </div>
        <div class="form-group mb-1">
            <label asp-for="BusEngineNumber" class="form-label">Motor Numarası</label>
            <input asp-for="BusEngineNumber" type="text" class="form-control" placeholder="Motor Numarası" />
            <span asp-validation-for="BusEngineNumber" class="text-danger small"></span>
        </div>
        <div class="form-group mb-1">
            <label asp-for="TakoId" class="form-label">Takograf İsmi</label>
            <input asp-for="TakoId" type="number" class="form-control" placeholder="Takograf İsmi" />
            <span asp-validation-for="TakoId" class="text-danger small"></span>
        </div>
        <div class="form-group mb-1">
            <label asp-for="TakoNumber" class="form-label">Takograf Numarası</label>
            <input asp-for="TakoNumber" type="text" class="form-control" placeholder="Takograf Numarası" />
            <span asp-validation-for="TakoNumber" class="text-danger small"></span>
        </div>
    </form>

</div>

<div class="modal-footer">
    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Kapat</button>
    <button type="submit" class="btn btn-success" form="frmAddNewBus">Kaydet</button>

</div>


@if (string.IsNullOrEmpty(Model.Done) == false)
{
    <script>
        $("#modalAdd").modal("hide");
        toastr.success('@Model.Done', 'Başarılı');
        refresh.click();
    </script>
}



