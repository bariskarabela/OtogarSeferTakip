@using OtogarSeferTakip.Entities;
@model List<Bus>


<div class="col-4">
    <form asp-action="BusListPartial" data-ajax="true" data-ajax-method="get" data-ajax-update="#panel">
    </form>
</div>



<table id="busTable" class="table table-hover table-sm">
    <thead>
        <tr>
            <th>Plaka</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Tip</th>
            <th>Motor Numarası</th>
            <th>Takograf İsmi</th>
            <th>Takograf Numarası</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Bus bus in Model)
        {

            <tr>
                <td>@bus.BusPlate</td>
                <td>@bus.BusBrand</td>
                <td>@bus.BusModelName</td>
                <td>@bus.BusType</td>
                <td>@bus.BusEngineNumber</td>
                <td>@bus.Tako.TakoName</td>
                <td>@bus.TakoNumber</td>

                <td class="text-end">

                    <a asp-action="EditBusPartial" asp-route-id="@bus.Id" class="btn btn-info btn-sm bg-secondary" data-bs-toggle="modal" data-bs-target="#modalEdit" data-ajax="true" data-ajax-method="get" data-ajax-update="#modalEditContent">
                        <i class="fa fa-edit me-2"></i>

                    </a>
                    @*                            <a asp-action="Delete" asp-route-id="@tako.BusId" onclick="return confirm('@tako.BusName isimli takografı silmek istediğinize emin misiniz?')" type="button" class="btn btn-info btn-sm bg-secondary"><i class="fa fa-trash me-2"></i></a>*@

                </td>
            </tr>

        }
    </tbody>
</table>
