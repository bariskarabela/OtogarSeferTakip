@model TakoModel;



<!-- Modal -->

<div class="modal-header">
    <h5 class="modal-title">Düzenle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>


<div class="modal-body">
    <form id="frmEditTako" asp-action="EditTako" method="post" data-ajax="true" data-ajax-method="post" data-ajax-update="#modalEditContent">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

        <div class="form-group mb-1">
            <label asp-for="TakoName" class="form-label">Takograf İsmi</label>
            <input asp-for="TakoName" type="text" class="form-control" placeholder="Takograf İsmi" />
            <span asp-validation-for="TakoName" class="text-danger small"></span>
        </div>
        <input type="hidden" asp-for="Id" />
    </form>

</div>

<div class="modal-footer">
    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Kapat</button>
    <button type="submit" class="btn btn-success" form="frmEditTako">Kaydet</button>

</div>


@if (string.IsNullOrEmpty(Model.Done) == false)
{
    <script>
        $("#modalEdit").modal("hide");
        toastr.success('@Model.Done', 'Başarılı');
        refresh.click();
    </script>
}




