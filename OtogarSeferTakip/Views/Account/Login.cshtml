@model LoginViewModel

@{
    ViewData["Title"] = "Giriş";
}


<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2"> @ViewData["Title"]</h1>
       
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="Sicil" class="form-label"><i class="fa-solid fa-user me-2"></i>Sicil</label>
                <input asp-for="Sicil" type="number" class="form-control" placeholder="Siciliniz" />
                <span asp-validation-for="Sicil" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"><i class="fa-solid fa-lock me-2"></i>Şifre</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Şifreniz" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-right-to-bracket  me-2"></i>Giriş Yap</button>
            </div>
        </form>
    </div>
</div>
