@model RegisterViewModel

@{
    ViewData["Title"] = "Personel Ekle";
}



<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2"> @ViewData["Title"]</h1>

    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="Sicil" class="form-label"><i class="fa-solid fa-user me-2"></i>Sicil</label>
                <input asp-for="Sicil" type="number" class="form-control" placeholder="Sicil" />
                <span asp-validation-for="Sicil" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"><i class="fa-solid fa-lock me-2"></i>Şifre</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Şifre"/>
              
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RePassword" class="form-label"><i class="fa-solid fa-lock me-2"></i>Şifre Tekrarı</label>
                <input asp-for="RePassword" type="password" class="form-control" placeholder="Şifre Tekrarı" />
                <span asp-validation-for="RePassword" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label"><i class="fa-solid fa-signature me-2"></i>İsim Soyisim</label>
                <input asp-for="FullName" class="form-control" placeholder="Kullanıcı İsim Soyisim" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <label asp-for="District" class="form-label"><i class="fa-solid fa-handcuffs me-2"></i>Birim</label>
            <div class="input-group mb-3">
             
                <div>
                    <select asp-for="District" class="form-select">
                        <option value="">Seçiniz...</option>
                       
                        <option value="Trafik Tescil Şube Müdürlüğü">Trafik Tescil Şube Müdürlüğü</option>

                    </select>
                </div>
               
                <div>  <span asp-validation-for="District" class="text-danger small"></span></div>
          
            </div>
           
            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-right-to-bracket  me-2"></i>Ekle</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @if (ViewData["result"] != null && ViewData["result"] == "UserAddSuccess")
    {
        <script>
            toastr["success"]("Personel eklendi.", "Başarılı.")
        </script>

    }

    <script>

        @if (!ViewData.ModelState.IsValid)
        {
            foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <text>
                    toastr.error("@Html.Raw(error.ErrorMessage)", "Hata");
                </text>

            }
        }
    </script>

}
