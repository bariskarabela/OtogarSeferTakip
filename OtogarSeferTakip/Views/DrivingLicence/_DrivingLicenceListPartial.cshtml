@using OtogarSeferTakip.Entities;
@model List<DrivingLicence>


<div class="col-4">
    <form asp-action="DrivingLicenceListPartial" data-ajax="true" data-ajax-method="get" data-ajax-update="#panel">
    </form>
</div>



<table id="drivingLicenceTable" class="table table-hover table-sm">
    <thead>
        <tr>
            <th>Ehliyet Numarası</th>
            <th>İsim</th>
            <th>Soyisim</th>
            <th>Cinsiyet</th>
            <th>Doğum Tarihi</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (DrivingLicence drivingLicence in Model)
        {

            <tr>
                <td>@drivingLicence.LicenceNo</td>
                <td>@drivingLicence.Name</td>
                <td>@drivingLicence.LastName</td>
                <td>@drivingLicence.Gender</td>
                <td>@drivingLicence.Birthday.ToShortDateString()</td>
     

                <td class="text-end">

                    <a asp-action="EditBusPartial" asp-route-id="@drivingLicence.Id" class="btn btn-info btn-sm bg-secondary" data-bs-toggle="modal" data-bs-target="#modalEdit" data-ajax="true" data-ajax-method="get" data-ajax-update="#modalEditContent">
                        <i class="fa fa-edit me-2"></i>

                    </a>
                    @*                            <a asp-action="Delete" asp-route-id="@tako.BusId" onclick="return confirm('@tako.BusName isimli takografı silmek istediğinize emin misiniz?')" type="button" class="btn btn-info btn-sm bg-secondary"><i class="fa fa-trash me-2"></i></a>*@

                </td>
            </tr>

        }
    </tbody>
</table>
